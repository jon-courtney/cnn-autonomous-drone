<?xml version="1.0"?>
<launch>
    <arg name="namespace" default="bebop" />
    <arg name="ip" default="192.168.42.1" />
    <arg name="drone_type" default="bebop2" /> <!-- available drone types: bebop1, bebop2 -->
    <arg name="config_file" default="$(find bebop_driver)/config/defaults.yaml" />
    <arg name="camera_info_url" default="package://bebop_driver/data/$(arg drone_type)_camera_calib.yaml" />

    <!-- Joystick args -->
    <arg name="joy_dev" default="/dev/input/js0" />
    <arg name="joy_config" default="log710" />
    <arg name="teleop_config" default="$(find bebop_tools)/config/$(arg joy_config).yaml" />

    <group ns="$(arg namespace)">
	<!-- Bebop Driver -->
        <node pkg="bebop_driver" name="bebop_driver" type="bebop_driver_node" output="screen">
            <param name="camera_info_url" value="$(arg camera_info_url)" />
            <param name="bebop_ip" value="$(arg ip)" />
            <rosparam command="load" file="$(arg config_file)" />
        </node>

	<!-- Joystick nodes -->
	<rosparam file="$(arg teleop_config)" command="load" />
	<node pkg="joy" type="joy_node" name="joy_node">
      	    <param name="dev" value="$(arg joy_dev)" />
            <param name="deadzone" value="0.2" />
            <param name="autorepeat_rate" value="20" />
        </node>

        <node pkg="joy_teleop" type="joy_teleop.py" name="joy_teleop">
        </node>

        <include file="$(find bebop_description)/launch/description.launch" />

        <node name="image_throttle" type="throttle" pkg="topic_tools" args="messages /bebop/image_raw 4" />

	<node name="image_view" type="image_view" pkg="image_view">
	    <remap from="image" to="/bebop/image_raw_throttle"/>
	</node>
    </group>
</launch>
